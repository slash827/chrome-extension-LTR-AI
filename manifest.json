{
  "manifest_version": 3,
  "name": "AI Hebrew RTL",
  "version": "1.1",
  "description": "Smart RTL text alignment for Hebrew in AI chat platforms",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://*.claude.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://math-gpt.org/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Hebrew RTL"
  }
}